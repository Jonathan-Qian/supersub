<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperSub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/green</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="TypeXL">
        <item name="android:textSize">@dimen/text_size_XL</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TypeHuge">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TypeTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TypeHeading">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TypeSubHeading">
        <item name="android:textSize">@dimen/text_size_sub_heading</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TypeBody">
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TypeCaption">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>