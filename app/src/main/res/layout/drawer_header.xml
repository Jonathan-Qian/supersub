<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingStart="@dimen/default_layout_padding"
    android:paddingTop="48dp"
    android:paddingEnd="@dimen/default_layout_padding"
    android:paddingBottom="@dimen/default_layout_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/tv_header_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team" />

    <TextView
        android:id="@+id/tv_header_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Season" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_view_margin"
        app:cardCornerRadius="@dimen/default_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:orientation="horizontal"
            android:padding="@dimen/default_layout_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_warning"
                app:tint="@color/white" />

            <TextView
                style="@style/TypeBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_view_margin"
                android:text="@string/manual_save_warning" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>